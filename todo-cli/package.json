    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "sequelize-cli": "^6.6.0"
  },
  "dependencies": {
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.29.0"
  }
